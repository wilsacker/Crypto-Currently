 <div class="signup-card">
  <div class="signup-card-header">
    <h2>Sign Up</h2>
  </div>
  <div id="signup" role="tabpanel">
    <form id="signup-form" class="signup-card-body">
      <div>
        <label for="username-input-signup" class="signup-form-label">Username</label>
        <input type="text" id="username-input-signup" class="signup-input" required />
      </div>
      <div class="signup-form-group password-field">
        <label for="password-input-signup" class="signup-form-label">Password</label>
        <div class="password-wrapper">
          <input type="password" id="password-input-signup" class="signup-input" required />
          <button type="button" class="password-toggle-btn" onclick="toggleSignupPassword()">Show</button>
        </div>
      </div>
      <button type="submit" id="signup-btn" class="signup-btn">Signup!</button>
      <a href="/login" class="login-link">Login instead</a>
    </form>
  </div>
</div>



<script src="/js/signup.js"></script>