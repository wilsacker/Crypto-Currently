  <div class="container">
    <div class="header">
      <h1>My Watch List</h1>
    </div>
    <ul class="watchlist">
      {{#if watchlist.length}}
        {{#each watchlist}}
          <li class="watchlist-item">
            <span class="item-name">{{name}} ({{symbol}})</span>
            <form action="/remove-from-watchlist" method="POST" class="remove-form">
              <input type="hidden" name="cryptoId" value="{{id}}">
              <button type="submit" class="remove-btn">Remove</button>
            </form>
          </li>
        {{/each}}
      {{else}}
        <li class="watchlist-item">No items in watchlist</li>
      {{/if}}
    </ul>
  </div>

