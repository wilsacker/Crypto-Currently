<div class="container">
  <div class="header">
    <h1>My Watch List</h1>
  </div>
  <ul class="watchlist">
    {{#if watchlist.length}}
      {{#each watchlist}}
        <li class="watchlist-item" data-crypto-id="{{id}}">
          <span class="item-name">{{name}} ({{symbol}})</span>
          <button class="remove-from-watchlist" data-crypto-id="{{id}}">Remove</button>
        </li>
      {{/each}}
    {{else}}
      <li class="watchlist-item">No items in watchlist</li>
    {{/if}}
  </ul>
</div>

<script src="/js/watchList.js"></script>
